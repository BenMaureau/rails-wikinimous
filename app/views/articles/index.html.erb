<div class="header">
    <h3> Wikinimous </h3>
    <%= link_to "Add a new article", new_article_path, class: "btn btn-success" %>
  </div>

<div class="container">
  <% @articles.each do |article| %>
  <div class = "article">
    <h2><%= link_to article.title, article_path(article) %></h2>
    <p> <%= article.content %></p>
  </div>
  <% end %>

</div>
